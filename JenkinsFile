pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "portfolio-app"
        DEPLOY_DIR = "/var/www/portfolio"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/deep2405sharma-droid/portfolio-cicd.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'sudo docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Deploy to EC2') {
            steps {
                echo 'Deploying Docker container...'
                sh '''
                    sudo docker stop $DOCKER_IMAGE || true
                    sudo docker rm $DOCKER_IMAGE || true
                    sudo docker run -d -p 80:80 --name $DOCKER_IMAGE $DOCKER_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Deployment completed successfully!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
